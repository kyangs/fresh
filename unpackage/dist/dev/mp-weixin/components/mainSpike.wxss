
.mainSpike{
	width: 100%;
	height: auto;
	background: #FFFFFF;
	padding: 15rpx 20rpx 15rpx;
	box-sizing: border-box;
}
.mainSpike-scroll{
	width: 100%;
	height: auto;
/* 	padding: 0 23rpx; */
	box-sizing: border-box;
	background: #FFFFFF;
}
.mainSpike-box-title{
	width: 100%;
	height: 76rpx;
	padding-left: 20rpx;
	box-sizing: border-box;
	font-weight: bold;
	color: #343434;
	line-height: 76rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
}
.mainSpike-box-title-lable{
	font-size: 30rpx;
	margin-right: 15rpx;
	margin-left: 10rpx;
}
.mainSpike-box-title-more{
	position: absolute;
	right: 0;
	color: #42CA5E;
}
.u-countdown-colon{
	color: #007AFF!important;
}
.mainSpike-box{
	width: 100%;
	height: auto;
	padding: 0 20rpx;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	white-space:nowrap;
}
.mainSpike-box-list{
	width: 250rpx;
	height: auto;
	margin-right: 25rpx;
}
.mainSpike-box-list-image{
	width: 210rpx;
	height: 240rpx;
	padding: 10rpx;
	box-sizing: border-box;
}
.mainSpike-box-list-image image{
	width: 100%;
	height: 100%;
}
.mainSpike-box-list-nema{
	width: 100%;
	height: 52rpx;
	line-height: 28rpx;
	font-size: 20rpx;
	color: #333333;
	/* background: #007AFF; */
	font-weight: 650;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	word-wrap:break-word;
	word-break:break-all;
	white-space: normal;
	margin-bottom: 15rpx;
}
.mainSpike-box-list-prick{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	/* margin: 0 20upx 20upx 20upx; */
	font-size: 24rpx;
	padding-right: 15rpx;
	box-sizing: border-box;
}
.mainSpike-box-list-prick-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 80rpx;
	/* line-height: 45rpx; */
	/* display: flex;
	justify-content: flex-start; */
}
.mainSpike-box-list-prick-item-left{
	font-size: 30rpx;
	color: #FF0C22;
	font-weight: 600;
	margin-right: 10rpx;
	height: 45rpx;
	line-height: 45rpx;
}
.mainSpike-box-list-prick-item-left text:nth-child(1){
	font-size: 22rpx;
	margin-right: 5rpx;
}
.mainSpike-box-list-prick-item-right{
	height: 35rpx;
	line-height: 35rpx;
	font-size: 22rpx;
	color: #A4A3A7;
	text-decoration: line-through;
}
.mainSpike-box-list-prick-items{
	width: 45rpx;
	height: 45rpx;
	background: #60DA62;
	border-radius: 5rpx;
	font-size: 40rpx;
	color: #FFFFFF;
	text-align: center;
	line-height: 45rpx;
}

