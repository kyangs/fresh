
.classRightListBox{
	width: 100%;
	height: auto;
	padding: 20rpx;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.classRightListBox-left{
	width: 157rpx;
	height: 157rpx;
	border-radius: 5rpx;
	margin-right: 25rpx;
}
.classRightListBox-left image{
	width: 100%;
	height: 100%;
}
.classRightListBox-right{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: auto;
}
.classRightListBox-right-name{
	width: 100%;
	line-height: 50rpx;
	height: 50rpx;
	color: #000000;
	font-size: 26rpx;
	font-weight: 600;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.classRightListBox-right-title{
	width: 100%;
	height: 35rpx;
	font-size: 22rpx;
	line-height: 35rpx;
	color: #858585;
}
.classRightListBox-right-lable{
	width: 100%;
	padding: 6rpx;
	height: auto;
}
.classRightListBox-right-lable-list{
	display: inline-block;
	height: 35rpx;
	border: 1px solid;
	border-radius: 8rpx;
	font-size: 20rpx;
	line-height: 32rpx;
	padding: 0 10rpx;
	box-sizing: border-box;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
}
.classRightListBox-right-prick{
	width: 100%;
	height: 46rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding-right: 15rpx;
	box-sizing: border-box;
}
.classRightListBox-right-prick-left{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.classRightListBox-right-prick-left-prick1{
	height: 100%;
	line-height: 46rpx;
	color: #FF3A86;
	margin-right: 10rpx;
}
.classRightListBox-right-prick-left-prick1 text:nth-child(1){
	font-size: 16rpx;
}
.classRightListBox-right-prick-left-prick1 text:nth-child(2){
	font-size: 26rpx;
	font-weight: bold;
}
.classRightListBox-right-prick-left-prick2{
	height: 100%;
	line-height: 46rpx;
	color: #B6B6B6;
	font-size: 18rpx;
	text-decoration: line-through;
}
.classRightListBox-right-prick-right{
	width: 45rpx;
	height: 45rpx;
	background: #60DA62;
	border-radius: 5rpx;
	font-size: 40rpx;
	color: #FFFFFF;
	text-align: center;
	line-height: 45rpx;
}

