
.coupon-box{
	width: 100%;
	height: auto;
	padding: 20rpx;
	box-sizing: border-box;
	border-radius: 20rpx;
	background: #FFFFFF;
	margin-bottom: 20rpx;
}
.coupon-box-top{
	width: 100%;
	height: 156rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.coupon-box-top-left{
	width: 170rpx;
	height: 100%;
	border-right: 1rpx solid #F6F6F6;
	padding-top: 14rpx;
	box-sizing: border-box;
}
.coupon-box-top-left-number{
	width: 100%;
	height: 80rpx;
	color: #EF1F15;
	line-height: 80rpx;
}
.coupon-box-top-left-number text:nth-child(1){
	font-size: 24rpx;
	font-weight: bold;
}
.coupon-box-top-left-number text:nth-child(2){
	font-size: 50rpx;
	font-weight: bolder;
}
.coupon-box-top-left-text{
	width: 100%;
	height: 48rpx;
	color: #4A4E51;
	font-size: 22rpx;
	text-align: center;
	line-height: 48rpx;
}
.coupon-box-top-centent{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 100%;
	padding-left: 30rpx;
	box-sizing: border-box;
	text-align: left;
}
.coupon-box-top-centent-name{
	width: 100%;
	height: 46rpx;
	font-weight: bold;
	color: #01040D;
	line-height: 46rpx;
	font-size: 30rpx;
	text-align: left;
}
.coupon-box-top-centent-name-class{
	margin-right: 10rpx;
}
.coupon-box-top-centent-description{
	width: 100%;
	height: 46rpx;
	line-height: 46rpx;
	color: #FC154D;
	font-size: 22rpx;
}
.coupon-box-top-centent-time{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
	color: #474746;
	font-size: 24rpx;
}
.coupon-box-top-right{
	width: 84rpx;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
/* 使用条件 */
.coupon-box-condition{
	width: 100%;
	height: auto;
	padding: 15rpx 25rpx;
	box-sizing: border-box;
	text-align: left;
	margin-bottom: 15rpx;
}
.coupon-box-condition-list{
	width: 100%;
	height: 35rpx;
	color: #8E8D93;
	font-size: 20rpx;
	line-height: 35rpx;
	text-overflow: ellipsis;
	overflow: hidden;
}
.coupon-box-reason{
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	color: #F81538;
	text-align: left;
	font-size: 20rpx;
	padding-left: 25rpx;
	box-sizing: border-box;
}
.coupon-box-reason{
	width: 100%;
	height: auto;
	line-height: 35rpx;
	color: #8E8D93;
	font-size: 20rpx;
	padding-left: 25rpx;
	box-sizing: border-box;
}

